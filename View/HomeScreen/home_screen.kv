<HomeScreenView>
    name: 'home screen'
    md_bg_color: app.md_bg_color

    MDBoxLayout:
        orientation: 'vertical'
        #adaptive_height: True
        size_hint: 1,1
        spacing: dp(5)
        padding_top: 0
        padding_bottom: 0

        MDTopAppBar:
            id: topbar_action
            title: "SafeWatch"
            right_action_items: [["account-circle", lambda x: root.switch_screen("profile screen")]]
            left_action_items: [["menu", lambda x:root.switch_screen("menu screen")]]
            md_bg_color: get_color_from_hex("#1E1E15")
            #('#03396c')
            specific_text_color: get_color_from_hex('#b3cde0')
            text_color: get_color_from_hex('#b3cde0')
            font_weight: "bold"


        MDBoxLayout:
            id: header_info
            spacing: dp(2)
            padding: dp(0), dp(0), dp(0), 0
            md_bg_color: get_color_from_hex('#1E1E15')
            size_hint: 1, None
            adaptive_height: False

            MDCard:
                id: card_cont_holder
                spacing: dp(2)
                padding: dp(2)
                height: header_info.height
                size_hint: 1, None
                radius: [5,]

                FitImage:
                    source: "assets/images/criminal_justice.jpeg"
                    size_hint: .7, None
                    size: header_info.size #card_cont_holder.width, card_cont_holder.height
                    #fit_mode: root.fit_mode
                    #allow_stretch: True
                    radius: [5,]

        MDBoxLayout:
            id: notification_holder
            orientation: "vertical"
            spacing: dp(2)
            padding: dp(0), dp(0), dp(0), dp(2)
            radius: [15,]
            size_hint: 1, .2
            md_bg_color: app.md_bg_color

            Notification:

                MDLabel:
                    id: welcome
                    scale: 1
                    opacity: 0
                    text: "Loading ..."
                    font_style: 'H6'
                    bold: True
                    halign: "center"
                    x: -self.width
                    text_color: "#D4DE95"
                    theme_text_color: "Custom"

        MDBoxLayout:
            id: content_holder
            orientation: "horizontal"
            spacing: dp(5)
            padding: 0, 0, 0, dp(2)
            size_hint: 1, .15
            md_bg_color: app.md_bg_color
            radius: [15,]

            MDLabel:
                text: "View Crime Trends"
                font_size: 12
                bold: True
                halign: "center"
                valign: "bottom"
                text_color: "teal"
                theme_text_color: "Custom"

            MDLabel:
                text: "View Crime Map"
                font_size: 12
                bold: True
                halign: "center"
                valign: "bottom"
                text_color: "teal"
                theme_text_color: "Custom"

            MDLabel:
                text: "Report Crime"
                font_size: 12
                bold: True
                halign: "center"
                valign: "bottom"
                text_color: "teal"
                theme_text_color: "Custom"

        MDBoxLayout:
            id: content_holder
            orientation: "horizontal"
            spacing: dp(5)
            padding: dp(2)
            size_hint: 1, .3

            MDCard:
                id: alert_holder
                spacing: dp(2)
                padding: dp(2)
                height: content_holder.height
                size_hint: 1, None
                radius: [5,]
                on_release: root.switch_screen('trends screen')

                FitImage:
                    source: 'assets/images/crime-wave.jpg'
                    size_hint: None, None
                    size: alert_holder.size
                    radius: [5,]

            MDCard:
                id: map_holder
                spacing: dp(2)
                padding: dp(2)
                height: content_holder.height
                size_hint: 1, None
                radius: [5,]
                on_release: root.switch_screen('map screen')

                FitImage:
                    source: 'assets/images/crmap.png'
                    size_hint: None, None
                    size: alert_holder.size
                    radius: [5,]

            MDCard:
                id: map_holder
                spacing: dp(2)
                padding: dp(2)
                height: content_holder.height
                size_hint: 1, None
                radius: [5,]
                on_release: root.switch_screen('report screen')

                FitImage:
                    source: 'assets/images/rcrime.jpeg'
                    size_hint: None, None
                    size: alert_holder.size
                    radius: [5,]

        MDBoxLayout:
            id: card_content_holder
            orientation: "vertical"
            spacing: dp(5)
            padding: dp(10)
            radius: [5,]

            ScrollView:
                md_bg_color: app.md_bg_color
                bar_width: 0
                MDList:
                    id: report_list

                    ThreeLineListItem:
                        text: "Loading ..."
                        secondary_text: "Downtown Street, City Center"
                        tertiary_text: "Reported: 12:45 PM, Mar 3"
                        padding: 0, 0, 0, 0

                    ThreeLineListItem:
                        text: "Loading ..."
                        secondary_text: "Downtown Street, City Center"
                        tertiary_text: "Reported: 12:45 PM, Mar 3"

                    ThreeLineListItem:
                        text: "Loading ..."
                        secondary_text: "Downtown Street, City Center"
                        tertiary_text: "Reported: 12:45 PM, Mar 3"



<Notification@MDCard>
    spacing: dp(2)
    padding: dp(0)
    size_hint: 1, .1
    elevation: 2



