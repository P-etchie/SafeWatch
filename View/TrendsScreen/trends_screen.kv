<TrendsScreenView>
    name: 'trends screen'
    md_bg_color: '1E1E15'

    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        orientation: 'vertical'
        size_hint: 1, 1

        MDBoxLayout:
            spacing: dp(10)
            padding: dp(10)
            orientation: 'horizontal'
            size_hint: 1, None
            adaptive_height: True
            md_bg_color: root.md_bg_color

            MDCard:
                id: book_report
                spacing: dp(10)
                padding: dp(10)
                size_hint_y: None
                adaptive_height: True

                FitImage:
                    source: "assets/images/book_report.png"
                    radius: [5,]
                    size_hint_y: None

            MDCard:
                spacing: dp(10)
                padding: dp(10)

                MDBoxLayout:
                    orientation: 'vertical'

                    MDLabel:
                        text: "User Reported Cases"
                        bold: True
                        halign: "center"
                        valign: "top"
                        theme_text_color: "Custom"
                        text_color: "teal"

                    MDLabel:
                        text: root.user_reported_cases
                        halign: "center"
                        bold: True
                        text_color: "#FF5722"
                        theme_text_color: "Custom"

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            size_hint_y: None
            padding: dp(10)
            spacing: dp(10)

            MDIconButton:
                icon: "arrow-left-drop-circle"
                on_press: root.switch_screen("home screen")
                icon_color: '#FFA896'
                theme_icon_color: 'Custom'

            MDLabel:
                text: "COUNTY CRIME RECORDS"
                bold: True
                font_size: dp(20)
                halign: "center"
                text_color: '#FFA896'
                theme_text_color: "Custom"

            MDIconButton:
                icon: "arrow-right-drop-circle"
                on_press: root.switch_screen("secondtrend screen")
                icon_color: '#FFA896'
                theme_icon_color: 'Custom'


        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: dp(10)

            MDScrollView:
                size_hint_y: 1

                MDGridLayout:
                    id: crime_list
                    cols: 1
                    adaptive_height: True
                    size_hint_y: None
                    spacing: dp(10)


